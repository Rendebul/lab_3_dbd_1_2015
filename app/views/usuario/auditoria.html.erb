<!DOCTYPE html>
<html>
<head>
	<title>Inicio</title>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
	  <div class="container-fluid">
	  <!--head, with brand-->
	  	<div class="navbar navbar-header">
	  		<a class="navbar-brand" href="#">Photolog</a>
	  	</div>

	  	<!-- links and others -->
	  	<div class="collapse navbar-collapse">
	  		<ul class="nav navbar-nav">
	  			<li><a href="/">Inicio</a></li>
	  		</ul>
	  		<% if logged_in? %>
		  		<ul class="nav navbar-nav navbar-right">
		  			<li><a href="/cuenta/">Mi Cuenta</a></li>
	  				<li><a href="/logout">Salir</a></li>
		  		</ul>
	  		<% else %>
		  		<ul class="nav navbar-nav navbar-right">
		  			<li><a href="/registrar">Registrar</a></li>
		  			<li><a href="/iniciar">Iniciar</a></li>
		  		</ul>
	  		<% end %>
	  	</div>
	  </div>
	</nav>
	<div id="main-container" class="container-fluid">
		<div class="row">
			<div id="sidebar" class="col-xs-1">
			<ul class="nav">				
				<li><%= link_to "Editar", '/editar/' %></li>
				<li><a href="/amigos">Amigos</a></li>
				<li><a href="/fotos">Fotos</a></li>
				<% if is_admin? %>
					<li><a href="/cuentas">Listado Cuentas</a></li>
					<li><a href="/crear_cuenta">Crear Cuenta</a></li>
					<li><a href="/auditoria">Auditoria</a></li>
				<%else %>
					<li><a href="/transferir">Pagar Gold</a></li>
				<% end %>
			</ul>
			</div>
			<div id="content" class="col-xs-11">
				<p>
					<table class="table table-striped table-bordered table-hover table-condensed">
						<tr>
							<th>ID del usuario</th>
							<th>ID de la tupla </th>
							<th>Nombre de la tabla</th>
							<th>Valor anterior de la tabla </th>
							<th>Valor nuevo de la tabla </th>
							<th>Fecha</th>
							<th>Accion realizada</th>
						</tr>
						<% @auditoria.each do |auditoria| %>
						<tr>
							<td><%= auditoria.AUD_ID_USUARIO %> </td>
							<td><%= auditoria.AUD_ID_TUPLA %> </td>
							<td><%= auditoria.NOMBRE_TABLA %> </td>
							<td><%= auditoria.VALOR_ANTIGUO %> </td>
							<td><%= auditoria.VALOR_NUEVO %> </td>
							<td><%= auditoria.FECHA %> </td>
							<td><%= auditoria.ACCION %> </td>
						</tr>
						<% end %>
					</table>
				</p>	
			</div>
		</div>
	</div>
</body>
</html>
<style type="text/css">
	body {padding-top: 70px;}
</style>